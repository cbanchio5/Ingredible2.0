<%# app/views/favourites/_favourite.html.erb %>
<%= turbo_frame_tag dom_id(recipe, :favourite) do %>
  <% favourite = current_user.favourites.find_by(recipe: recipe) %>
  <% if favourite %>
    <%= link_to recipe_favourite_path(recipe, favourite), method: :delete do %>
      <%= image_tag "icon/bookmark-active.svg", class: "icon" %>
    <% end %>
  <% else %>
    <%= link_to recipe_favourites_path(recipe), method: :post do %>
      <%= image_tag "icon/bookmark.svg", class: "icon" %>
    <% end %>
  <% end %>
<% end %>
